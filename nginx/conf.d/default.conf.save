server {
    listen 80;
    server_name sysnet.awh.co.id;
    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl http2;
    server_name sysnet.awh.co.id;

    ssl_certificate /etc/letsencrypt/live/sysnet.awh.co.id/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/sysnet.awh.co.id/privkey.pem;

    location / {
        add_header Cache-Control no-cache;

        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header Host $http_host;
        proxy_set_header Cookie $http_cookie;
        proxy_pass http://wireguard-ui:5000/;  # Pastikan ini adalah nama layanan Docker yang benar
    }

    location /wireguard-ui/ {
        proxy_pass http://wireguard-ui:80/;  # Pastikan port ini sesuai dengan port WireGuard UI
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header Host $http_host;
        proxy_set_header Cookie $http_cookie;
        proxy_redirect off;  # Sesuaikan ini jika diperlukan
    }
}

